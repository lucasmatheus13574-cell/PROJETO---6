# Banco de dados
DATABASE_URL=postgresql://usuario:senha@localhost:5432/adapta_tasks

# Autenticação JWT
JWT_SECRET=sua_chave_secreta_muito_segura_aqui

# Servidor
PORT=3000
NODE_ENV=development

# Frontend (CORS)
FRONTEND_URL=http://localhost:5173

# Email - Resend (recomendado para produção)
RESEND_API_KEY=seu_api_key_resend_aqui
EMAIL_FROM=noreply@seudomain.com

# Email - Nodemailer (fallback SMTP)
# Descomente se não usar Resend ou quiser usar SMTP
# EMAIL_SMTP_HOST=smtp.seuservidor.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=seu_email@example.com
# EMAIL_SMTP_PASS=sua_senha_smtp
# EMAIL_SMTP_SECURE=false (mude para true se usar porta 465)

# Base URL para links em emails
BASE_URL=http://localhost:3000

# Timezone padrão
TIMEZONE_DEFAULT=UTC

# Agenda.js (Job Scheduler)
# MongoDB connection (se usar MongoDB para armazenar jobs)
# MONGODB_URL=mongodb://localhost:27017/adapta_tasks

# Configurações adicionais
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
